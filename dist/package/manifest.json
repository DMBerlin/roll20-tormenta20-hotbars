{
  "manifest_version": 3,
  "name": "Tormenta20 Hotbars",
  "version": "0.3.1.92428",
  "description": "Chrome Extension que adiciona hotbars ao Roll20 para o sistema Tormenta20: Jogo do Ano",
  "author": "Daniel Marinho Goncalves",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://app.roll20.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://app.roll20.net/editor/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon256.png",
    "512": "icon512.png"
  },
  "action": {
    "default_title": "Tormenta20 Hotbars",
    "default_popup": "popup.html"
  }
}