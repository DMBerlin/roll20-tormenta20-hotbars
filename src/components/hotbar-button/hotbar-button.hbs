<button id="{{id}}" class="hotbar-button" style="
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 0;
        background: {{background}};
        color: {{textColor}};
        border: 2px solid {{border}};
        border-radius: 8px;
        cursor: pointer;
        font-size: {{fontSize}};
        font-weight: bold;
        width: {{width}};
        height: {{height}};
        transition: all 0.2s;
        box-shadow: 0 2px 8px rgba(0,0,0,0.3);
        text-align: center;
        line-height: 1.1;
        position: relative;
        font-family: 'Arial', sans-serif;
        {{#if disabled}}opacity: 0.5; cursor: not-allowed;{{/if}}
        {{customStyles}}
    " {{#if disabled}}disabled{{/if}} {{#if tooltip}}title="{{tooltip}}" {{/if}} {{#each dataAttributes}}
  data-{{@key}}="{{this}}" {{/each}}>
  {{#if icon}}
  <div class="hotbar-button-icon" style="
        font-size: {{iconSize}};
        margin-bottom: 2px;
        line-height: 1;
    ">{{icon}}</div>
  {{/if}}

  {{#if label}}
  <div class="hotbar-button-label" style="
        font-size: {{fontSize}};
        font-weight: bold;
        text-align: center;
        word-wrap: break-word;
        max-width: 100%;
        line-height: 1.1;
    ">{{label}}</div>
  {{/if}}
</button>