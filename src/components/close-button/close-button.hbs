<button 
    class="roll20-close-button" 
    id="{{id}}" 
    title="{{title}}"
    style="
        background: none;
        border: none;
        color: {{color}};
        font-size: {{fontSize}};
        cursor: pointer;
        padding: {{padding}};
        width: {{width}};
        height: {{height}};
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: {{borderRadius}};
        transition: background-color 0.2s;
        flex-shrink: 0;
        {{#if customStyles}}{{customStyles}}{{/if}}
    "
>
    {{text}}
</button> 